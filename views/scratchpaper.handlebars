<h2>Burgers that haven't been eaten!</h2>

<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">EATEN!</button>
        </form>

        <form action="/{{this.id}}?_method=DELETE" method="POST">
          <button type="submit">DELETE!</button>
        </form>

      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that have been devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="false">
          <button type="submit">NOT EATEN!</button>
        </form>

        <form action="/{{this.id}}?_method=DELETE" method="POST">
          <button type="submit">DELETE!</button>
        </form>

      </li>
    {{/if}}
  {{/each}}
</ul>

<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="slee">Eaten?</label><br>
    <input type="radio" name="devoured" value="1" checked> Eaten!<br>
    <input type="radio" name="devoured" value="0"> Not Eaten
  </div>

  <button type="submit">Add Burger</button>
</form>
